    <script>
        
        async function addToCart(productId) {

            try {
                
            const response=await fetch('/addToCart',{
                method:'POST',
                headers: {'Content-Type': 'application/json'},
                body:JSON.stringify({productId:productId,quantity:1})
            })

            const data=await response.json()

            if (!data.success && data.redirectUrl) {
            window.location.href = data.redirectUrl; 
            return;
            }
            
            if(data.success){
                Toastify({
                text: "Added to Cart",
                duration: 2000,
                gravity: "top",
                position: "right", 
                backgroundColor: "green",
                stopOnFocus: true
            }).showToast();
            }
            else{
                Toastify({
                text: data.message,
                duration: 2000,
                gravity: "top",
                position: "right",
                backgroundColor: "red",
                stopOnFocus: true
            }).showToast();
            }

            } catch (error) {
             console.error('Error:', error);
             Toastify({
                text: "Something went wrong. Please try again.",
                duration: 2000,
                gravity: "top",
                position: "right",
                backgroundColor: "red",
                stopOnFocus: true
             }).showToast();
            }
        }


        async function addToWishlist(productId) {

            try {
                const response=await fetch('/addToWishlist',{
                method:'POST',
                headers: {'Content-Type': 'application/json'},
                body:JSON.stringify({productId:productId})
                })

                 const data=await response.json()

                 if (!data.success && data.redirectUrl) {
                    window.location.href = data.redirectUrl;
                    return;
                }


                if(data.success){
                    Toastify({
                    text: "Added Wishlist",
                    duration: 2000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "green",
                    stopOnFocus: true
                }).showToast();
                }
                else{
                    Toastify({
                    text: data.message,
                    duration: 2000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "red",
                    stopOnFocus: true
                }).showToast();
                }
            }


            catch (error) {
                console.error('Error:', error);
                    Toastify({
                        text: "Something went wrong. Please try again.",
                        duration: 2000,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "red",
                        stopOnFocus: true
                    }).showToast();      
             }


        }


        



    </script>


