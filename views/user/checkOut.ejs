                    if (!paymentMethod) {
                        Swal.fire({
                            icon: "warning",
                            title: "Missing Payment Method",
                            text: "Please select a payment method."
                        });
                        return;
                    }

                    if (!totalPrice || totalPrice <= 0) {
                        Swal.fire({
                            icon: "error",
