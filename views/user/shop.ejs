                    duration: 2000,
                    gravity: "top",
                    position: "right",
                    backgroundColor: "red",
                    stopOnFocus: true
                }).showToast();
                }
            }


            catch (error) {
                console.error('Error:', error);
                    Toastify({
                        text: "Something went wrong. Please try again.",
                        duration: 2000,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "red",
                        stopOnFocus: true
                    }).showToast();      
            }


            }


