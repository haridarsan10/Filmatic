<%- include("../partials/admin/admin-header") %>

<style>
  /* General body styling for luxury effect */
  body {
    padding-left: 250px;
    background-color: #faf5f5; /* Subtle, classy background */
    font-family: 'Poppins', sans-serif; /* Modern and elegant font */
    color: #333; /* Soft text color */
  }

  /* Container styling */
  .container {
    margin-top: 50px;
    padding: 40px;
    background: linear-gradient(to bottom, #ffffff, #f8f9fa);
    border-radius: 15px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    border: 1px solid #e0e0e0;
  }

  /* Form title styling */
  h2 {
    font-size: 24px;
    font-weight: 600;
    color: #2c3e50;
    text-transform: uppercase;
    margin-bottom: 20px;
    text-align: center;
    letter-spacing: 1px;
  }

  /* Label styling */
  .form-label {
    font-weight: 500;
    color: #34495e;
    font-size: 16px;
    letter-spacing: 0.5px;
  }

  /* Input field styling */
  .form-control {
    border-radius: 8px;
    border: 1px solid #dcdfe6;
    font-size: 16px;
    padding: 10px;
    transition: all 0.3s ease;
    box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.05);
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
  }

  /* Button styling */
  .btn-primary {
    background-color: #3498db;
    border-color: #3498db;
    color: white;
    font-weight: bold;
    padding: 12px 25px;
    font-size: 16px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(52, 152, 219, 0.3);
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #2980b9;
    border-color: #2980b9;
    box-shadow: 0 6px 12px rgba(41, 128, 185, 0.4);
  }

  /* Spacing and additional classes */
  .mt-60 {
    margin-top: 60px;
  }

  .mt-30 {
    margin-top: 30px;
  }

  .mb-4 {
    margin-bottom: 1.5rem;
  }

  /* Textarea */
  textarea {
    resize: none;
    border-radius: 8px;
    padding: 10px;
    transition: all 0.3s ease;
  }

  textarea:focus {
    border-color: #007bff;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
  }

  /* Custom grid button styling */
  .d-grid.text-end {
    display: flex;
    justify-content: flex-end;
  }

  /* Add slight hover effect for input fields */
  .form-control:hover {
    background-color: #f7f8fa;
    border-color: #dcdfe6;
  }
</style>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 mt-60">
      <h2>Edit Category</h2>
      <form method="post" action="/admin/editCategory/<%= category._id %>">
        <!-- Category Name -->
        <div class="mb-4 mt-30">
          <label for="category_name" class="form-label">Name</label>
          <input
            type="text"
            name="categoryName"
            value="<%= category.name %>"
            class="form-control border"
            placeholder="Enter category name"
            id="category_name"
          />
        </div>

        <!-- Category Description -->
        <div class="mb-4">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="description"
            class="form-control border"
            placeholder="Enter category description"
            id="description"
            rows="5"
          ><%= category.description %></textarea>
        </div>

        <!-- Submit Button -->
        <div class="d-grid text-end mt-30">
          <button class="btn btn-primary" type="submit">Update Category</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/admin/admin-footer") %>