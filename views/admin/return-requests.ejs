
<%- include("../partials/admin/admin-header") %>

<style>
   body {
         margin-top: 100px;
        }

        .container {
            max-width: 900px;
            background: white;
            margin: auto;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        /* Table Styling */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        td {
            background-color: #ffffff;
        }

        .actions button {
            border: none;
            padding: 8px 12px;
            cursor: pointer;
            font-size: 14px;
            margin: 5px;
            border-radius: 5px;
        }

        .accept-btn {
            background-color: #28a745;
            color: white;
        }

        .reject-btn {
            background-color: #dc3545;
            color: white;
        }

        /* Modal Styling */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 8px;
            width: 350px;
            text-align: center;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        }

        .close-btn {
            float: right;
            font-size: 20px;
            cursor: pointer;
        }

        textarea {
            width: 100%;
            height: 80px;
            margin: 10px 0;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .reject-confirm-btn {
            background: red;
            color: white;
            border: none;
            padding: 8px 15px;
            cursor: pointer;
            border-radius: 5px;
        }

    </style>



<div class="container">
  <h2>Return Requests</h2>

  <table>
      <thead>
          <tr>
              <th>Order ID</th>
              <th>User</th>
              <th>Final Amount</th>
              <th>Return Reason</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
          <% returnOrders.forEach(order => { %>
              <tr>
                  <td><%= order.orderId %></td>
                  <td><%= order.userId.name %> (<%= order.userId.email %>)</td>
                  <td>â‚¹<%= order.finalAmount %></td>
                  <td><%= order.returnReason %></td>
                  <td class="actions">
                      <form onsubmit="return false" style="display:inline;">
                          <input type="hidden" name="orderId" value="<%= order._id %>">
                          <button type="submit" onclick="approveReturn('<%= order._id %>')" class="accept-btn"><i class="fa-solid fa-check"></i>Accept</button>
                      </form>
                      <button class="reject-btn" onclick="openRejectModal('<%= order._id %>')">
                          <i class="fa-solid fa-times"></i> Reject
                      </button>
                  </td>
              </tr>
          <% }) %>
      </tbody>
  </table>
</div>

<!-- Rejection Modal -->
<div id="rejectModal" class="modal">
  <div class="modal-content">
      <span class="close-btn" onclick="closeRejectModal()">&times;</span>
      <h3>Reject Return Request</h3><br>
      <label for="rejectReason">Reason for Rejection:</label>
      <p class="error" id="errorText" style="display: none; color: red; font-size: 12px;">Please provide a reason for rejection.</p><br>
      <textarea id="rejectReason" placeholder="Enter reason for rejection"></textarea>
      <button onclick="submitRejection()" class="reject-confirm-btn">Submit</button>
  </div>
</div>



<script>
  
  function openRejectModal(orderId) {
      const modal = document.getElementById("rejectModal");
      modal.style.display = "flex";
      modal.dataset.orderId = orderId;
  }

  function closeRejectModal() {
      const modal = document.getElementById("rejectModal");
      modal.style.display = "none";
      document.getElementById("rejectReason").value = ""; 
      document.getElementById("errorText").style.display = "none"; 
  }

  document.getElementById("rejectReason").addEventListener("input", function() {
      document.getElementById("errorText").style.display = "none"; 
  });

  async function submitRejection() {
      const modal = document.getElementById("rejectModal");
      const orderId = modal.dataset.orderId;
      const rejectReason = document.getElementById("rejectReason").value.trim();

      if (!orderId) {
          Swal.fire({ icon: "error", title: "Error", text: "Order ID is missing!" });
          return;
      }

      if (rejectReason.length < 5) {
          document.getElementById("errorText").style.display = "block"; 
          return;
      }

      try {
          const response = await fetch("/admin/reject-return", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ orderId, rejectReason }),
          });

          const result = await response.json();

          if (result.success) {
              Swal.fire({
                  icon: "success",
                  title: "Return Request Rejected",
                  text: "The return request has been successfully rejected.",
                  showConfirmButton: false,
                  timer: 2000
              }).then(() => {
                  closeRejectModal();
                  location.reload(); 
              });
          } else {
              Swal.fire({
                  icon: "error",
                  title: "Failed",
                  text: "An error occurred while rejecting the request. Please try again.",
              });
          }
      } catch (error) {
          console.error("Error rejecting request:", error);
          Swal.fire({
              icon: "error",
              title: "Error",
              text: "Something went wrong. Please try again later.",
          });
      }
  }
  

  async function approveReturn(orderId) {
    const confirmation = await Swal.fire({
        title: "Are you sure?",
        text: "Once approved, the return amount will be refunded to the user's wallet.",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, approve it!"
    });

    if (!confirmation.isConfirmed) {
        return; // Exit if user cancels
    }

    try {
        const response = await fetch(`/admin/approve-return`, {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({ orderId }),
        });

        const result = await response.json();

        if (result.success) {
            Swal.fire({
                icon: "success",
                title: "Approved!",
                text: "The return request has been approved and the amount refunded.",
                showConfirmButton: false,
                timer: 1500
            }).then(() => {
              setTimeout(()=>{
                location.reload(); 
              },2000)
            });
        } else {
            Swal.fire({
                icon: "error",
                title: "Approval Failed",
                text: "Something went wrong. Please try again.",
            });
        }
    } catch (error) {
        console.error("Error approving return:", error);
        Swal.fire({
            icon: "error",
            title: "Error",
            text: "An error occurred. Please try again later.",
        });
    }
}



</script>

